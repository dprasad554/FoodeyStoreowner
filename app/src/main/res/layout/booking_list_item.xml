<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/productDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="K Rohit Kumar"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/customerMob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="+91 9668801268"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/callCust"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/layout_margin10"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text="Call"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_17"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_margin5">

                <TextView
                    android:id="@+id/customerAlternate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="+91 9668801268"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/callCustAlt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/layout_margin10"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text="Call"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_17"
                    android:textStyle="bold" />

            </LinearLayout>
           <!-- <TextView
                android:id="@+id/customerAlternate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 9668801268"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FD12897"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_margin10">

                <Button
                    android:id="@+id/acceptOrder"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/layout_margin5"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimaryDark"
                    android:text="accept"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancelOrder"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/layout_margin5"
                    android:layout_weight="0.5"
                    android:background="@color/yellow"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/booking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="@dimen/layout_margin5"
                android:text="Canceled"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>